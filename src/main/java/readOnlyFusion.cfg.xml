<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<!--Using Direct DB Connection -->

		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>


		<property name="hibernate.connection.datasource">java:jboss/rofusion-ds</property>

		<!--Test Database Settings -->
<!-- 		<property name="hibernate.connection.url">jdbc:postgresql://172.19.98.161:5432/fusion</property> -->
<!-- 		<property name="hibernate.connection.username">fusion</property> -->
<!-- 		<property name="hibernate.connection.password">fusion123</property> -->
		
		<property name="show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">none</property>
		<property name="hibernate.connection.autocommit">true</property>
		<!-- <property name="current_session_context_class">thread</property> -->


	</session-factory>
</hibernate-configuration>
